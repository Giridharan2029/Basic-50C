Check: Array is sorted
#include <stdio.h>

void Checksort(int n, int a[])
{
    int flag;
    for(int i = 0; i < n-1; i++)
    {
            if(a[i] > a[i+1])
            {
                flag++;
                break;
            }
    }
    if(flag == 1)
    {
        printf("Sorted");
    }
    else
    {
         printf("Not Sorted");
    }
    
}

int main()
{
    int n;
    scanf("%d", &n);
    int arr[n];
    for(int i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
   
     Checksort(n,arr);
    
    return 0;
    
}
