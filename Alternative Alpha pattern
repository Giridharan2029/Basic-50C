#include<stdio.h>

void pat(int n)
{
    int t = 1;
    int a = 65;
    for(int i = 0; i < n; i++)
    {
        for(int j = 0; j < i; j++)
        {
            if(t%2!=0)
            {
                printf("%c ", a++);
                a+=32;
            }
            else
            {
                printf("%c ", a++);
                a-=32;
            }
            t++;
        }
        printf("\n");
    }
}

int main(void) 
{
    int n;
    scanf("%d", &n);
    
    pat(n);
}
